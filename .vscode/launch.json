    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "node",
            "request": "launch",
            "name": "get-products",
            "program": "${workspaceFolder}/node_modules/.bin/sls",
            "args": [
                "invoke", "local", "-f", "get-products", "-d", "{}"
            ],
            "env": {
                "SLS_DEBUG": "*",
                "PRODUCTS_TABLE_NAME": "shopping-dev-products"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "create-products",
            "program": "${workspaceFolder}/node_modules/.bin/sls",
            "args": [
                "invoke", "local", "-f", "create-products", "-p", "request_payloads/create-product.json"
            ],
            "env": {
                "SLS_DEBUG": "*",
                "PRODUCTS_TABLE_NAME": "shopping-dev-products"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceRoot}/node_modules/.bin/serverless",
            "args": [
                "offline",
                "start",
                "--skipCacheInvalidation"
            ],
            "env": {
                "NODE_ENV": "development"
            }
        }                       
    ]
}